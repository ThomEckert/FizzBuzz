{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./",
    "types": ["jest", "node"],

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
  },
  "include": ["src/**/*", "tests/**/*.ts", "fizzbuzz.test.ts"],
}
